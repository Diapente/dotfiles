set trash="imaps://imap.gmail.com/[Google Mail]/Trash"

#configures status bar to display inbox name
set status_format = "───[ Folder: %f ]───[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%>─%?p?( %p postponed )?───gmail"
